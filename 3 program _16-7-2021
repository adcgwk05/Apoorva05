import java.util.*;

 class Main
 {
      public static void main(String [] args) 
{ 
Scanner sc=new Scanner(System.in);
ArrayList<Integer> ar=new ArrayList<Integer>();
System.out.println("enter array size");
int size=sc.nextInt();
System.out.println("enter array elements");
for(int i=0;i<size;i++)
ar.add(sc.nextInt());
while(true)
{
    
System.out.println("1.BeginInsert");
System.out.println("2.EndInsert");
System.out.println("3. Position Insert");
System.out.println("4. Begin Delete");
System.out.println("5. End Delete");
System.out.println("6. Position Delete");
System.out.println("7. Display");
System.out.println("8. Exit");

System.out.println("enter your choice");
  int choice=sc.nextInt();
  switch(choice)
  {
  case 1:
  System.out.println("enter data" +" ");
  int BeginInsert=sc.nextInt();
  ar.add(0,BeginInsert);
  System.out.println(ar);
  break;
  case 2:
  System.out.println("enter data" +" ");
  int EndInsert=sc.nextInt();
  ar.add(size-1,EndInsert);
  System.out.println(ar);
  break;
   case 3:
  System.out.println("enter position to insert and then data" +" ");
  int positionInsert=sc.nextInt();
  int positiondataInsert=sc.nextInt();
  ar.add(positionInsert,positiondataInsert);
  System.out.println(ar);
  break;
  case 4:
  System.out.println("enter data" +" ");
  ar.remove(0);
  break;
  case 5:
  System.out.println("enter data" +" ");
  ar.remove(size-1);
  System.out.println(ar);
  break;
  case 6:
  System.out.println("enter position to delete and then data" +" ");
  int positiondelete=sc.nextInt();
 ar.remove(positiondelete);
 System.out.println(ar);
  break;
  case 7:
  System.out.println(ar);
   break;
   case 8:
   System.out.println("progrqm will exit");
   break;
  }
  }
   }
   }

