      class Main
      {
	   public static void main (String[]args)
	{
	   int k;
	    int start = 1, end = 7, inc = +2;
	   for (k = 1; k <= 2; k++)
	    {
	      for (int i = start; i >= 1 && i <= 7; i += inc)
	       {
	         for (int j = 1; j <= i; j++)
	         {
		System.out.print("*");
	          }
	             System.out.println(" ");
	        }
		start = 7;
		end = 1;
		inc = -2;
            }
         }
     }

Output
*
***
*****
*******
*****
***
*
